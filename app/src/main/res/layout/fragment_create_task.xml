<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="50dp"
    android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_add_black_24dp"
            android:scaleType="centerCrop" />

        <TextView
            android:fontFamily="@font/product_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Thêm Ghi Chú"
            android:textColor="@color/red"
            android:textSize="22sp"
            tools:ignore="MissingPrefix" />

    <TextView
           android:fontFamily="@font/product_sans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Điền các sự kiện của bạn vào ô trống dưới đây"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:alpha="0.8"
            android:textSize="18sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/product_sans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Tiêu Đề"
            tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/addTaskTitle"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="11dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Mô Tả Công Việc"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/addTaskDescription"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="11dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Chọn Ngày"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/taskDate"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="11dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Chọn Thời Gian"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/taskTime"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="11dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:text="Thêm sự kiện"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/taskEvent"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="11dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTask"
        android:fontFamily="@font/product_sans_bold"
        android:text="Thêm Ghi Chú"
        android:background="@drawable/btn_background"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="40dp" />

</LinearLayout>
</ScrollView>